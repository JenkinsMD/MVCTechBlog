<!-- Loop over each object in the projects array -->
  <div class="col-md-5 cardBack">
    <h2>
      {{blogs.title}}
    </h2>
    
    <p>Created by {{blogs.user.name}} on {{format_date blogs.date_created}}</p>
  </div>
  <div class="col-md-7 cardBack">
    POST:
    <p>
      {{blogs.content}}
    </p>
  </div>



{{#if blogs.comments}}

{{#each blogs.comments}}
<div class="row mb-4 project cardBack">
  <div class="col-md-5">
     <p>
      <sub>{{format_date date_created}}</sub> {{user.name}} Says: 
    </p>
    <div class="col-md-7">
        <p>
          {{comment}}
        </p>
     </div>
  </div>
  
</div>
{{/each}} 

{{/if}}

<div class="row mt-4 ">
  <div class="col-md-6 cardBack">
    <h3>Add a comment:</h3>

    <form class="form new-cmt-form">
    
      <div class="form-group ">
        <label for="cmt-content">Content:</label>
        <textarea class="form-input" id="cmt-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-secondary ">Create</button>
      </div>
    </form>
  </div>
</div>

<script src="../js/newcomment.js"></script>
